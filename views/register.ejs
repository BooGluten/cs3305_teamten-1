<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <title>Register</title>
    <!-- Custom styles for this template -->
    <link href="/public/login.css" rel="stylesheet">
  </head>
<body class = "text-center">  
  <div class = "row">  
        <form class="form-signin" method="post" action="/register" role="form">
          <h1 class="h3 mb-3 font-weight-normal">Please Register Here</h1>  
          <% if(generalErr.length > 0) { %><h4 class ="error"><%= generalErr %></h4> <% } %>
          <label for="inputFirstName" class="sr-only">First Name</label>
          <input name = "fname" value="<%= fname %>" type="text" id="inputFirstName" class="form-control" placeholder="First Name" minlength="3" maxlength="32" required autofocus/>
          <!-- Server error checking after input fields-->
          <% if(fnameErr.length > 0) { %><span class="error"><%= fnameErr %></span> <%  } %>

          <label for ="inputLastName" class="sr-only">Last Name</label>
          <input name = "lname" value="<%= lname %>" type="text" id="inputLastName" class="form-control" placeholder="Last Name" minlength="3" maxlength="32" required/>
          <% if(lnameErr.length > 0){ %> <span class="error"><%= lnameErr %></span><% } %>
          
          <label for="inputUsername" class="sr-only">Username (2-32 characters)</label>
          <input name="user_name" value="<%= user_name %>" type="text" id="inputUsername" class="form-control" placeholder="Username" minlength="2" maxlength="32" required/>  
          <% if (usernameError.length > 0){ %><span class ="error"><%= usernameError %></span> <%  } %>
          
          <label for="inputEmail" class="sr-only">Email address</label>
          <input name="email" value="<%= email %>"type="email" id="inputEmail" class="form-control" placeholder="Email address" required/>
          <% if (emailError.length>0){ %><span class="error"><%= emailError %></span> <%  } %>
          
          <label for="inputPhone" class="sr-only">Phone Number</label>
          <input name="mobile" id="inputPhone" class="form-control" placeholder="Phone Number" required/>
          <% if (mob_noErr.length > 0) { %><span class="error"></span><% } %>

          <label for="inputPassword" class="sr-only">Password (8-32 characters)</label>
          <input name="password" type="password" minlength = "8" maxlength="32" id="inputPassword" class="form-control" placeholder="Password" required/>
          <label for="inputPassword" class="sr-only">Confirm Password</label>
          <input name="otherPassword" minlength="8" maxlength="32" type="password" id="inputPassword" class="form-control" placeholder="Confirm Password" required/>
          <% if(passwordErr.length > 0){ %><span class="error"><%= passwordErr %></span> <%  } %>
          
          <div class="checkbox mb-3">
          </div>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
        </form>
        <a class="btn btn-lg btn-info btn-block" role ="button" href="/">Go back home</a>
      </div>
      
</body>